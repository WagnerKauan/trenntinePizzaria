generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STAFF
}

enum PromoType {
  PERCENT
  COMBO
}

enum Status {
  PENDING
  PREPARATION
  CONCLUDED
  CANCELED
}

enum MethodPayment {
  Pix
  Cart√£o
  Dinheiro
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String @unique
  password  String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
}


model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  ingredients String?
  price       Float
  category    String
  imageUrl    String?
  tags        String[]
  isFeatured  Boolean  @default(false)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Promotion {
  id          String    @id @default(cuid())
  name        String
  description String
  type        PromoType
  active      Boolean   @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  imageUrl    String?
  rules        Json
  createdAt   DateTime  @default(now())
}

model Order {
  id             String        @id @default(cuid())
  createdAt      DateTime      @default(now())
  status         Status        @default(PENDING)
  items          Json
  name           String
  phone          String
  email          String?
  cep            String
  street         String
  number         String
  complement     String?
  neighborhood   String
  referencePoint String
  methodPayment  MethodPayment @default(Pix)
  changeFor      String?
  notes          String?
  total          Float

  appliedPromotionName String?  
  appliedPromotionId   String?  
}
